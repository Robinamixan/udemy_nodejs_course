<%- include('./../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
<%- include('./../includes/head_end.ejs') %>

<body>
<%- include('./../includes/navigation.ejs') %>

<main>
    <% if (locals.errorMessage) { %>
        <div class="user-message user-message--error">
            <%= errorMessage %>
        </div>
    <% } %>
    <form class="product-form" action="/admin/<%= editing ? 'edit-product' : 'add-product' %>" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-control">
            <label for="title">Title</label>
            <input
                    class="<%= locals.validationErrors && validationErrors.find(error => error.param === 'title') ? 'invalid' : '' %>"
                    type="text"
                    name="title"
                    id="title"
                    value="<%= editing || locals.product ? product.title : '' %>"
            >
        </div>
        <div class="form-control">
            <label for="imageUrl">Image URL</label>
            <input
                    class="<%= locals.validationErrors && validationErrors.find(error => error.param === 'imageUrl') ? 'invalid' : '' %>"
                    type="text"
                    name="imageUrl"
                    id="imageUrl"
                    value="<%= editing || locals.product ? product.imageUrl : '/images/book-4986.png' %>"
            >
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input
                    class="<%= locals.validationErrors && validationErrors.find(error => error.param === 'price') ? 'invalid' : '' %>"
                    type="number"
                    name="price"
                    id="price"
                    step="0.01"
                    value="<%= editing || locals.product ? product.price : '' %>"
            >
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea
                    class="<%= locals.validationErrors && validationErrors.find(error => error.param === 'description') ? 'invalid' : '' %>"
                    name="description"
                    id="description"
                    rows="5"
            ><%= editing || locals.product ? product.description : '' %></textarea>
        </div>

        <% if (editing) { %>
            <input type="hidden" name="productId" value="<%= product._id %>">
        <% } %>
        <button class="btn" type="submit"><%= editing ? 'Update Product' : 'Add Product' %></button>
    </form>
</main>
<%- include('./../includes/scripts.ejs') %>
</body>

<%- include('./../includes/end.ejs') %>
